{
  "variables": {
    "aws_ecs_repo": "",
    "aws_ecs_password": "",
    "aws_ecs_server": ""
  },
  "builders": [
    {
      "type": "docker",
      "image": "rocker/r-base",
      "commit": "true"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": ["mkdir /workdir"]
    },
    {
      "type": "file",
      "source": "staging/",
      "destination": "/workdir"
    },
    {
      "type": "shell",
      "inline": ["apt-get update", "apt-get install -y python-pip", "pip install awscli", "Rscript /workdir/prepare.R"]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `aws_ecs_repo`}}",
	      "force": false
      },
      {
        "type": "docker-tag",
        "repository": "{{user `aws_ecs_repo`}}",
        "tag": "{{user `image_version`}}",
	      "force": true
      },
      {
        "type": "docker-push",
        "login": true,
        "login_email": "none",
        "login_username": "AWS",
        "login_password": "{{user `aws_ecs_password`}}",
        "login_server": "{{user `aws_ecs_server`}}"
      }
    ]
  ]
}

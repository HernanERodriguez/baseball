{
  "variables": {
    "aws_ecs_repo": "",
    "aws_ecs_password": "",
    "aws_ecs_server": ""
  },
  "builders": [
    {
      "type": "docker",
      "image": "anapsix/alpine-java",
      "commit": "true"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "../build/libs/baseball-0.0.1-SNAPSHOT.jar",
      "destination": "app.jar"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `aws_ecs_repo`}}",
              "force": true
      },
      {
        "type": "docker-tag",
        "repository": "{{user `aws_ecs_repo`}}",
        "tag": "{{user `image_version`}}",
              "force": true
      },
      {
        "type": "docker-push",
        "login": true,
        "login_email": "none",
        "login_username": "AWS",
        "login_password": "{{user `aws_ecs_password`}}",
        "login_server": "{{user `aws_ecs_server`}}"
      }
    ]
  ]
}

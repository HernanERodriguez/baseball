{
  "variables": {
    "aws_ecs_repo": "",
    "aws_ecs_password": "",
    "aws_ecs_server": ""
  },
  "builders": [
    {
      "type": "docker",
      "image": "nginx",
      "commit": "true"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "../dist/",
      "destination": "/usr/share/nginx/html"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "{{user `aws_ecs_repo`}}",
        "tag": "0.2"
      },
      {
        "type": "docker-push",
        "login": true,
        "login_email": "none",
        "login_username": "AWS",
        "login_password": "{{user `aws_ecs_password`}}",
        "login_server": "{{user `aws_ecs_server}}"
      }
    ]
  ]
}

{
  "variables": {
    "aws_ecs_repository": "",
    "aws_ecs_password": "",
    "aws_ecs_server": ""
  },
  "builders": [
    {
      "type": "docker",
      "image": "nginx",
      "export_path": "frontend.tar"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "../dist/",
      "destination": "/usr/share/nginx/html"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-import",
        "repository": "{{user `aws_ecs_server`}}/baseball",
        "tag": "0.1"
      },
      {
        "type": "docker-push",
        "login": true,
        "login_email": "none",
        "login_username": "AWS",
        "login_password": "{{user `aws_ecs_passowrd`}}",
        "login_server": "{{user `aws_ecs_server`}}"
      }
    ]
  ]
}
